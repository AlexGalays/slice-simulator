{
	"name": "@prismicio/slice-canvas-client",
	"version": "0.0.0",
	"description": "Preview and develop Prismic slices fast with minimal configuration",
	"keywords": [
		"typescript",
		"prismic"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/slice-canvas.git",
		"directory": "packages/core"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		},
		"./css/*": "./dist/css/*",
		"./package.json": "./package.json"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "cross-env NODE_ENV=production npm-run-all build:postcss build:siroc",
		"build:siroc": "siroc build",
		"build:postcss": "postcss src/css/style.css --output src/css/style.min.css --no-map --map --verbose",
		"dev": "cross-env NODE_ENV=development npm-run-all build:postcss --parallel dev:postcss dev:siroc",
		"dev:siroc": "chokidar \"./src/**/*\" --command \"siroc build\"",
		"dev:postcss": "postcss src/css/style.css --output src/css/style.min.css --no-map --map --verbose --watch",
		"prepare": "npm run build",
		"release": "npm run build && npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:dry": "standard-version --dry-run",
		"release:alpha": "npm run build && npm run test && standard-version --release-as major --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as major --prerelease alpha --dry-run",
		"unit": "nyc --reporter=lcovonly --reporter=text --exclude-after-remap=false ava",
		"test": "npm run unit"
	},
	"dependencies": {
		"slicemachine-core": "file:../../../slice-machine/packages/slicemachine-core"
	},
	"devDependencies": {
		"autoprefixer": "10.3.7",
		"ava": "^3.15.0",
		"chokidar-cli": "^3.0.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.0.8",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.1.0",
		"postcss": "^8.3.11",
		"postcss-cli": "^9.0.1",
		"postcss-import": "^14.0.2",
		"postcss-nesting": "^8.0.1",
		"siroc": "^0.16.0",
		"standard-version": "^9.3.2",
		"ts-eager": "^2.0.2"
	},
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
