{
	"name": "@prismicio/slice-simulator-local-controller",
	"version": "0.0.0",
	"description": "Preview and develop Prismic slices fast with minimal configuration",
	"keywords": [
		"typescript",
		"prismic"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/slice-simulator.git",
		"directory": "packages/local-controller"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite",
		"serve": "vite preview",
		"release": "npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:dry": "standard-version --dry-run",
		"release:alpha": "npm run test && standard-version --release-as patch --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as patch --prerelease alpha --dry-run",
		"test": "npm run unit && npm run build",
		"unit": "vitest run --coverage",
		"unit:watch": "vitest watch"
	},
	"devDependencies": {
		"@fontsource/ibm-plex-sans": "^4.5.13",
		"@prismicio/slice-simulator-com": "^0.4.1-alpha.0",
		"@vitejs/plugin-vue": "^3.2.0",
		"@vitest/coverage-c8": "^0.25.3",
		"autoprefixer": "^10.4.13",
		"cssnano": "^5.1.14",
		"postcss-import": "15.0.0",
		"postcss-nesting": "^10.2.0",
		"standard-version": "^9.5.0",
		"tailwindcss": "3.2.4",
		"ts-eager": "^2.0.2",
		"typescript": "^4.9.3",
		"vite": "^3.2.4",
		"vitest": "^0.25.3",
		"vue": "^3.2.45",
		"vue-router": "^4.1.6",
		"vue-tsc": "^1.0.9"
	},
	"engines": {
		"node": ">=14.15.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
