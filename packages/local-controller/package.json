{
  "name": "@prismicio/slice-simulator-local-controller",
  "version": "0.0.0",
	"description": "Preview and develop Prismic slices fast with minimal configuration",
	"keywords": [
		"typescript",
		"prismic"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/slice-simulator.git",
		"directory": "packages/local-controller"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"files": [
		"dist",
		"src"
	],
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "serve": "vite preview",
		"release": "npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:dry": "standard-version --dry-run",
		"release:alpha": "npm run test && standard-version --release-as major --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as major --prerelease alpha --dry-run",
		"unit": "nyc --reporter=lcovonly --reporter=text --exclude-after-remap=false ava",
		"test": "npm run unit && npm run build"
  },
  "devDependencies": {
		"@fontsource/ibm-plex-sans": "^4.5.7",
		"@prismicio/slice-simulator-com": "^0.3.1",
		"@vitejs/plugin-vue": "^2.3.1",
		"autoprefixer": "^10.4.4",
		"ava": "^3.15.0",
		"cssnano": "^5.1.7",
		"nyc": "^15.1.0",
		"postcss-nesting": "^9.0.0",
		"postcss-import": "14.1.0",
		"siroc": "^0.16.0",
		"standard-version": "^9.3.2",
		"tailwindcss": "2.2.19",
		"ts-eager": "^2.0.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
		"vue": "^3.2.32",
		"vue-router": "^4.0.14",
    "vue-tsc": "^0.34.5"
  },
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
